{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/types": ["../../packages/types/src"]
    },
    "types": ["nativewind/types", "jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../../packages/types/src/**/*"
  ],
  "exclude": ["node_modules"]
}
