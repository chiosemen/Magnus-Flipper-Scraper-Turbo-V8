{
  "name": "magnus-flipper-scraper",
  "version": "1.0.0",
  "description": "Scraper Dashboard with Tests",
  "private": true,
  "workspaces": ["apps/web", "api", "workers", "packages/*"],
  "type": "module",
  "scripts": {
    "start": "vite",
    "start:api": "pnpm --filter @repo/api build && PORT=3000 pnpm --filter @repo/api start",
    "start:workers": "pnpm --filter @repo/worker build && PORT=8081 pnpm --filter @repo/worker start",
    "start:production": "pnpm start:api & pnpm start:workers & wait",
    "build": "vite build",
    "test": "vitest run --workspace",
    "test:watch": "vitest --workspace",
    "test:coverage": "vitest run --config api/vitest.config.ts api/tests/unit --coverage && vitest run --config workers/vitest.config.ts workers/tests/unit --coverage && vitest run --config apps/web/vitest.config.ts apps/web/tests/unit --coverage && vitest run --config vitest.config.ts shared/tests --coverage",
    "test:ui": "vitest --workspace --ui",
    "test:api:unit": "vitest run --config api/vitest.config.ts api/tests/unit",
    "test:workers:unit": "vitest run --config workers/vitest.config.ts workers/tests/unit",
    "test:web:unit": "vitest run --config apps/web/vitest.config.ts apps/web/tests/unit",
    "test:unit": "npm run test:api:unit && npm run test:workers:unit && npm run test:web:unit",
    "test:api:integration": "vitest run --config api/vitest.config.ts api/tests/integration",
    "test:workers:integration": "vitest run --config workers/vitest.config.ts workers/tests/integration",
    "test:integration": "pnpm --filter @repo/database migrate && npm run test:api:integration && npm run test:workers:integration",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:load": "k6 run load/scenarios/peak.js",
    "test:load:peak": "k6 run load/scenarios/peak.js",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "lucide-react": "^0.562.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.2.1",
    "@vitejs/plugin-react": "^4.2.1",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "@faker-js/faker": "^8.4.1",
    "msw": "^2.3.0",
    "pg-mem": "^2.8.1",
    "@playwright/test": "^1.44.0"
  }
}
